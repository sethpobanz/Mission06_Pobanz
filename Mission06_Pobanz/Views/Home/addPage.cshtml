@model Mission06_Pobanz.Models.Application
<h1>Add a Movie Page</h1>
<br />

<form method="post">
    <div class="form-group">
        <label asp-for="Category" class="control-label">Category:</label>
        <input asp-for="Category" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title:</label>
        <input asp-for="Title" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label">Year:</label>
        <input asp-for="Year" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Director" class="control-label">Director:</label>
        <input asp-for="Director" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Edited" class="control-label">Edited:</label>
        <select asp-for="Edited" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LentTo" class="control-label">Lent to:</label>
        <input asp-for="LentTo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Notes (max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
